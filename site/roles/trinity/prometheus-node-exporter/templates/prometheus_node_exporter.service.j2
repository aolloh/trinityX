{{ ansible_managed | comment }}

[Unit]
Description=Prometheus Node Exporter
After=network-online.target

[Service]
Type=simple
User={{ prometheus_node_exporter_system_user }}
Group={{ prometheus_node_exporter_system_group }}
ExecStart={{ prometheus_node_exporter_binary_install_dir }}/prometheus_node_exporter \
{% for collector in prometheus_node_exporter_enabled_collectors -%}
{%   if not collector is mapping %}
    '--collector.{{ collector }}' \
{%   else -%}
{%     set name, options = (collector.items()|list)[0] -%}
    '--collector.{{ name }}' \
{%     for k,v in options|dictsort %}
    '--collector.{{ name }}.{{ k }}={{ v }}' \
{%     endfor -%}
{%   endif -%}
{% endfor -%}
{% for collector in prometheus_node_exporter_disabled_collectors %}
    '--no-collector.{{ collector }}' \
{% endfor %}
{% if prometheus_node_exporter_tls_server_config | length > 0 or prometheus_node_exporter_http_server_config | length > 0 or prometheus_node_exporter_basic_auth_users | length > 0 %}
    {% if prometheus_node_exporter_version is version('1.5.0', '>=') %}
    '--web.config.file=/etc/prometheus_node_exporter/config.yaml' \
    {% else %}
    '--web.config=/etc/prometheus_node_exporter/config.yaml' \
    {% endif %}
{% endif %}
{% if prometheus_node_exporter_version is version('1.5.0', '>=') and
      prometheus_node_exporter_web_listen_address is iterable and
      prometheus_node_exporter_web_listen_address is not mapping and
      prometheus_node_exporter_web_listen_address is not string %}
{%   for address in prometheus_node_exporter_web_listen_address %}
    '--web.listen-address={{ address }}' \
{%   endfor %}
{% else %}
    '--web.listen-address={{ prometheus_node_exporter_web_listen_address }}' \
{% endif %}
    '--web.telemetry-path={{ prometheus_node_exporter_web_telemetry_path }}'

SyslogIdentifier=prometheus_node_exporter
Restart=always
RestartSec=1
StartLimitInterval=0

{% set ns = namespace(protect_home = 'yes') %}
{% for m in (ansible_mounts|default([])) if m.mount.startswith('/home') %}
{%   set ns.protect_home = 'read-only' %}
{% endfor %}
{% if prometheus_node_exporter_textfile_dir.startswith('/home') %}
{%   set ns.protect_home = 'read-only' %}
{% endif %}
ProtectHome={{ ns.protect_home }}
NoNewPrivileges=yes

{% if (ansible_facts.packages.systemd | first).version is version('232', '>=') %}
ProtectSystem=strict
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes
{% else %}
ProtectSystem=full
{% endif %}

[Install]
WantedBy=multi-user.target
