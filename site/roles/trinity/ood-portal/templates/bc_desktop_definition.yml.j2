---
title: "Remote Desktop"
cluster: '{{ ood_portal_cluster_name }}'
submit: "submit/trinity.yml.erb"

attributes:
  desktop: 
    value: "{{ ood_vnc_desktop }}"
    options: ["{{ ood_vnc_desktop }}"]
  bc_vnc_idle:
    value: "{{ ood_vnc_idle_timeout }}"
    label: "Idle timeout"
    help: This is the time you have to connect to a session before it is automatically terminated
  bc_account:
    help: "This should be left blank most of the time"

batch_connect:
  websockify_cmd: "/usr/bin/websockify"

form:
  - cluster
  - bc_vnc_idle
  - desktop
  - bc_account
  - bc_num_hours
  - bc_num_slots
  - node_type
  - bc_queue
  - bc_vnc_resolution
  - bc_email_on_started
