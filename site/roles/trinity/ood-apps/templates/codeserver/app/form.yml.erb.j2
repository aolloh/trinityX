---

cluster: TrinityX

form:
  - bc_account
  - bc_queue
  - bc_num_hours
  - bc_num_slots

  - cores
  - memory
  - gpus
  - slurm_extra_args

  - modules

  - codeserver_version
  - codeserver_working_dir

attributes:

  bc_account:
    help: "Workload manager account. This can be left blank most of the time"
  bc_queue:
    help: "Workload manager queue. This can be left blank most of the time"
  bc_num_hours:
    help: "Number of hours for the job"
  bc_num_slots:
    widget: "number_field"
    min: 1
    step: 1
    label: "Number of nodes to run the job"
    help: "This will populate the `-N/--nodes` argument in the batch script"

  cores:
    widget: "number_field"
    min: 1
    step: 1
    label: "Number of Cores for the job"
    help: "This will populate the `--mincpus` argument in the batch script"
  memory:
    widget: "number_field"
    min: 1024
    step: 1024
    label: "Memory (in MB) for the job"
    help: "This will populate the `--mem` argument in the batch script"
  gpus:
    widget: "number_field"
    min: 1
    step: 1
    # value: 1
    label: "Number of GPUs per task"
    help: "This will populate the `-G/--gpus` argument in the batch script"
  slurm_extra_args:
    label: "Extra SLURM arguments"
    help: "Additional arguments to pass to the SLURM job script"

  modules:
    help: "The Environment modules to load before running the Jupyter notebook"

  codeserver_working_dir:
    label: "Working Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"
  codeserver_version:
    widget: "select"
    label: "Codeserver Version"
    options:
      - ["4.8", "4.8.3"]
      - ["3.9", "3.9.3"]